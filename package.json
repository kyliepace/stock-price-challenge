{
  "name": "graphy-backend-challenge",
  "version": "0.1.1",
  "license": "UNLICENSED",
  "private": true,
  "main": "lib/index.js",
  "engines": {
    "node": "14.15.1"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node lib/index.js",
    "watch": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "compile": "rm -Rf ./lib && tsc",
    "test": "ts-mocha --colors \"test/**/*.ts\" --exit --recursive",
    "lint": "eslint --ext .js,.ts src/",
    "lint:fix": "eslint --fix --ext .js,.ts src/"
  },
  "dependencies": {
    "d3-scale": "^3.0.0",
    "express": "^4.17.1",
    "ioredis": "^4.11.2",
    "mocha": "^8.2.1",
    "portfinder": "^1.0.20"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/d3-scale": "^3.2.1",
    "@types/express": "^4.17.9",
    "@types/ioredis": "^4.17.8",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "nodemon": "^1.19.1",
    "sinon": "^9.2.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "nodemonConfig": {
    "ignore": [
      "test",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run watch",
    "ext": "ts"
  }
}
